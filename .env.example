# ============= Environment Variables Template =============
# Copy this file to .env and fill in your actual values

# Database Configuration (for Production with PostgreSQL)
DB_USER=csp_user
DB_PASSWORD=your_secure_password_here
DB_NAME=csp_erp_db
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# For local development with SQLite (default)
# DATABASE_URL=sqlite:///./csp_erp.db

# JWT Configuration
JWT_SECRET=change-this-to-a-very-secure-random-string-min-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Application Settings
DEBUG=false
APP_NAME=UAE CSP-ERP API

# Backend Server
BACKEND_PORT=8000

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads

# Email Configuration (for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Celery/Redis (for background tasks - future sprint)
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
